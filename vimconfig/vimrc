  let g:startify_session_delete_buffers = 1
  let g:startify_session_persistence = 1
  let g:startify_custom_header = [
        \ '                                                                            ',
        \ '       ___________________________                                          ',
        \ '      /                           \                                         ',
        \ '      |     VIM - Vi IMproved     |                                         ',
        \ '      |    -------------------    |                                         ',
        \ '      |  by Bram Moolenaar et al. |                                         ',
        \ '      \__________________   ______/            __----~~~~~~~~~~~------___   ',
        \ '                         \ /        .  .   ~~//====......          __--~ ~~ ',
        \ '                    -.    \\      \_|//     |||\\  ~~~~~~::::... /~         ',
        \ '                 ___-==_   \   _-~o~  \/    |||  \\            _/~~-        ',
        \ '         __---~~~.==~||\=_    -_--~/_-~|-   |\\   \\        _/~             ',
        \ '     _-~~     .=~    |  \\-_    ''-~7  /-   /  ||    \      /               ',
        \ '   .~       .~       |   \\ -_    /  /-   /   ||      \   /                 ',
        \ '  /  ____  /         |     \\ ~-_/  /|- _/   .||       \ /                  ',
        \ '  |~~    ~~|--~~~~--_ \     ~==-/   | \~--===~~        .\                   ',
        \ '           ''         ~-|      /|    |-~\~~       __--~~                    ',
